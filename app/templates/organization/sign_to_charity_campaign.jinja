{% extends "base.jinja" %}

{% block title %}Sign to Charity Campaign{% endblock %}

{% block content %}
<div class="container mt-2">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>{{ _("Sign to Charity Campaign") }}</h1>
            <form method="post">
                <fieldset>
                    <label for="organization_id">{{ _("Organization:") }}</label>
                    <select class="form-control" id="organization_id" name="organization_id" required>
                        {% for organization in organizations %}
                        <option value="{{ organization.id }}">{{ organization.organization_name }}</option>
                        {% endfor %}
                    </select><br>
                    <label for="charity_campaign_id">{{ _("Charity Campaign:") }}</label>
                    <select class="form-control" id="charity_campaign_id" name="charity_campaign_id" required>
                        {% for campaign in charity_campaigns %}
                        <option value="{{ campaign.id }}">{{ campaign.name }}</option>
                        {% endfor %}
                    </select><br>
                    <button type="submit" class="btn btn-primary">{{ _("Sign In") }}</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>
{% endblock %}