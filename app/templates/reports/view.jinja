<!-- all.jinja -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reports</title>
    <link rel="stylesheet" type="text/css" href="../../static/style.css">
    <script src='../../static/reports/js/viewInHTML.js' defer></script>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-primary text-center">Reports</h1>
        <div class="text-center my-4">
            <button id="back-btn" class="btn btn-secondary">Powr√≥t do Reports UI</button>
        </div>

        <ul class="list-unstyled">
            {% for report in reports %}
            <li class="mb-4 p-3 border bg-white">
                <p><strong>Report ID:</strong> {{ report.report_id }}</p>
                <p><strong>Created At:</strong> {{ report.created_at }}</p>
                <p><strong>Entries:</strong></p>
                <ul>
                    {% for entry in report.entries %}
                    <li>{{ entry.resource_name }}: {{ entry.quantity }} ({{ entry.location }})</li>
                    {% endfor %}
                </ul>
            </li>
            {% endfor %}
        </ul>
    </div>
</body>
</html>
