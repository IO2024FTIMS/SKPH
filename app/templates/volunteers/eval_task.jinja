{% extends "base.jinja" %}

{% block title %}Evaluate Task{% endblock %}

{% block content %}
<div class="container mt-2">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3>Evaluate Task</h3>
            {% if not task._evaluation %}
            <h3>{% print(task) %}</h3>
            <form action="{{ url_for('volunteers.eval_task', task_id=task.id) }}" method="post">
                <fieldset> 
                <div class="form-group">
                <label for="score">Score</label>
                <select class="form-control" id="score" name="score">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea">Description:</label>
                    <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                </div>
                </fieldset>
                <div>
                    <button type="submit" class="btn btn-primary">Evaluate task</button>
                </div>
            </form>
            {% else %}
            <div class="alert alert-dismissible alert-danger">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Task is already evaluated!</strong> 
                <a href="{{ url_for('volunteers.list_tasks', volunteer_id=task.volunteer.id) }}" class="alert-link">Go back to tasks</a> to view the evaluation.
            </div>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}