{% extends "donors/base.jinja" %}

{% block title %}Evaluate Task{% endblock %}

{% block content %}
<div class="container mt-2">
  <div>
    <a href="{{ url_for('volunteers.list_tasks', volunteer_id=task.volunteer.id) }}" class="btn btn-secondary">Back</a>
  </div>
  <hr class="my-4" />
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h3>Evaluate Task</h3>
      <p>Task: {{ task.name }}</p>
      <p>Volunteer: {{ task.volunteer.first_name }} {{ task.volunteer.last_name }}</p>
      <p>Task Description: {{ task.description }}</p>
      <form action="{{ url_for('volunteers.eval_task', task_id=task.id) }}" method="post">
        <fieldset>
          <div class="form-group">
            <label for="score">Score</label>
            <select class="form-control" id="score" name="score" required>
              <option value="" disabled selected>Select a score</option>
              {% for i in range(1,6) %}
              <option value="{{ i }}">{{ i }}</option>
              {% endfor %}
            </select>
          </div>
          <div class="form-group">
            <label for="description">Description:</label>
            <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
          </div>
        </fieldset>
        <div>
          <button type="submit" class="btn btn-primary">Evaluate task</button>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}