{% extends "base.jinja" %}

{% block title %}{{ _("Tracking and managing resources module") }}{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
  <h1>{{ _("Tracking and managing resources module") }}</h1>
<h2>{{ _('Manage request panel') }}</h2>
<table class="table table-hover">
  <tr>
    <th>{{ _("Request:") }} </th>
  </tr>

  <tr>
    <td>{{ _("Name") }}</td>
    <td>{{ _("Status") }}</td>
    <td>{{ _("Affected") }}  </td>
    <td>{{ _("Address") }} </td>
    <td>{{ _("Needs") }}</td>
    <td>{{ _("Amount") }}</td>
    
  </tr>
    <tr>
      <td>{{ curr_request.name }}</td>
      <td>{{ curr_request.status }}</td>
      <td>
        <table class="table">
          <tr>
            <td>{{ _("First name:") }}</td>
            <td>{{ curr_request.first_name }}</td>
          </tr>
          <tr>
            <td>{{ _("Last name") }}  </td>
            <td> {{ curr_request.last_name }} </td>
          </tr>
        </table>
      </td>
      <td>
        <table>
          <tr>
            <td>{{ _("City") }}:</td>
            <td>{{ curr_request.city }}</td>
          </tr>
          <tr>
            <td>{{ _("Street") }}  </td>
            <td> {{ curr_request.street }} </td>
          </tr>
        </table>
      </td>
      <td>{{ curr_request.type }}</td>
      <td> {{curr_request.amount}} </td>
      <td>
        <a href="{{ url_for('supply_chain.donate_resources') }}">
        {{ _("Donate resources") }}
    </a>
      </td>
    </tr>

</table>
<form method="post">
  <label for="donation_amount">{{ _('Donation amount:') }}</label> 
  <input type="number" name="donation_amount" value="{{curr_request.amount}}" min="{{curr_request.amount}}" max="{{stock_item_count}}">
  <br>
  <label for="donation_type">{{ _('Donation type:') }}</label>
  <select name="donation_type">
    <option value={{curr_request.type}}>{{curr_request.type}}</option>
  </select>
  <br>
  <label for="item_amount">{{_('Avalible resource amount:')}}</label>
  <label name="item_amount">{{stock_item_count}}</label>
  <br>
  <input type="submit" value="{{_('Send to affected')}}">
</form>


</div>

{% endblock %}