{% extends "base.jinja" %}

{% block title %}Affected Details{% endblock %}

{% block content %}
<div class="container mt-2">
  <header>
    <h1>Details of {{ affected.first_name }} {{ affected.last_name }}</h1>
  </header>

  <section>
    <h2>Personal Information</h2>
    <ul class="list-group">
      <li class="list-group-item"><strong>First Name:</strong> {{ affected.first_name }}</li>
      <li class="list-group-item"><strong>Last Name:</strong> {{ affected.last_name }}</li>
      <li class="list-group-item"><strong>Needs:</strong> {{ affected.needs }}</li>
      <li class="list-group-item"><strong>Address:</strong> {{ affected.address.street }} {{ affected.address.street_number }},
          {{ affected.address.city }}, {{ affected.address.voivodeship }}</li>
    </ul>
  </section>

  <section class="mt-4">
    <h2>Requests</h2>
    {% if requests %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Request Name</th>
                    <th>Status</th>
                    <th>Needs</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for request in requests %}
                    <tr>
                        <td>{{ request.name }}</td>
                        <td>{{ request.status.value }}</td>
                        <td>{{ request.needs }}</td>
                        <td>{{ request.req_address.street }} {{ request.req_address.street_number }},
                            {{ request.req_address.city }}, {{ request.req_address.voivodeship }}</td>
                        <td>
                            {% if request.status == RequestStatus.PENDING %}
                                <a href="{{ url_for('affected.edit_request', request_id=request.id) }}" class="btn btn-primary btn-sm">
                                    Edit
                                </a>
                                <a href="{{ url_for('affected.delete_request', request_id=request.id) }}"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this request?');">
                                    Delete
                                </a>
                            {% else %}
                                <span class="text-muted">Not Editable</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-muted">No requests found for this affected person.</p>
    {% endif %}
  </section>

  <section class="mt-4">
    <div class="text-center">
      <a class="btn btn-primary"
         href="{{ url_for('affected.create_request', affected_id=affected.id) }}">
        {{ _("Create Request for") }} {{ affected.first_name }} {{ affected.last_name }}
      </a>
    </div>
  </section>
</div>
{% endblock %}
