{% extends "base.jinja" %}

{% block title %}{{ _("Donor's donations") }}{% endblock %}

{% block content %}
<div class="container mt-2">
  <div>
    <a href="{{ url_for('donors.fetch_donors') }}" class="btn btn-secondary">Back</a>
  </div>
  <hr class="my-4" />
  <h3>{{ _("Donations of") }} {{ donor.name }} {{ donor.surname }}</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">{{ _("Description") }}</th>
        <th scope="col">{{ _("Amount") }}</th>
        <th scope="col">{{ _("Number") }}</th>
      </tr>
    </thead>
    <tbody>
      {% for donation in donations_money %}
      <tr>
        <td>{{ donation.description }}</td>
        <td>{{ donation.cashAmount }}</td>
        <td></td>
      </tr>
      {% endfor %}
      {% for donation in donations_items %}
      <tr>
        <td>{{ donation.description }}</td>
        <td></td>
        <td>{{ donation.number }}</td>
      </tr>
      {% endfor %}
  </table>
</div>
{% endblock %}